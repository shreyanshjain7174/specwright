# =============================================================================
# Specwright â€” Environment Variables
# =============================================================================
# Copy this file to .env and fill in your values.
# NEVER commit .env to version control.

# -----------------------------------------------------------------------------
# DATABASE (Required)
# -----------------------------------------------------------------------------
# Neon PostgreSQL serverless connection string
# Get yours at: https://neon.tech
DATABASE_URL=postgresql://user:password@ep-xxx.us-east-1.aws.neon.tech/specwright?sslmode=require

# -----------------------------------------------------------------------------
# VECTOR DATABASE (Required)
# -----------------------------------------------------------------------------
# Qdrant vector database for semantic search
# Cloud: https://cloud.qdrant.io | Self-hosted: http://localhost:6333
QDRANT_URI=https://your-cluster.aws.cloud.qdrant.io:6333
QDRANT_API_KEY=your-qdrant-api-key

# -----------------------------------------------------------------------------
# GRAPH DATABASE (Optional, enables traceability graph)
# -----------------------------------------------------------------------------
# Memgraph for relationship tracing between features, specs, and context
# Self-hosted: bolt://localhost:7687 | Cloud: see memgraph.com
MEMGRAPH_URI=bolt://localhost:7687
MEMGRAPH_USERNAME=
MEMGRAPH_PASSWORD=

# -----------------------------------------------------------------------------
# AI / LLM (Required for spec generation)
# -----------------------------------------------------------------------------
# Cloudflare Workers AI for embeddings and inference
# Get yours at: https://dash.cloudflare.com (AI > Workers AI)
CLOUDFLARE_ACCOUNT_ID=your-cloudflare-account-id
CLOUDFLARE_API_TOKEN=your-cloudflare-api-token

# Alternative: OpenAI (if using OpenAI embeddings)
# OPENAI_API_KEY=sk-...

# -----------------------------------------------------------------------------
# MCP SERVER (Optional, for direct MCP transport config)
# -----------------------------------------------------------------------------
# Transport mode: 'stdio' (default, for Claude Desktop) or 'http' (for Cursor)
MCP_SERVER_MODE=stdio

# Port for HTTP mode (only used when MCP_SERVER_MODE=http)
MCP_HTTP_PORT=3001

# -----------------------------------------------------------------------------
# APPLICATION (Optional)
# -----------------------------------------------------------------------------
# Base URL for the application (used in emails, webhooks, etc.)
NEXT_PUBLIC_APP_URL=http://localhost:3000

# Node environment
NODE_ENV=development
